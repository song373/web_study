<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.trip.mapper.UserMapper">
    <select id="selectUserById" parameterType="string" resultType="com.app.trip.dto.User">
        SELECT * FROM users WHERE user_id = #{id}
    </select>
    <select id="selectUserByEmail" parameterType="string" resultType="com.app.trip.dto.User">
        SELECT * FROM users WHERE user_email = #{email}
    </select>
    <insert id="insertUser" parameterType="com.app.trip.dto.User">
        INSERT INTO users (user_id, user_pw, user_name, user_email, user_phone)
        VALUES (#{userId}, #{userPw}, #{userName}, #{userEmail}, #{userPhone})
    </insert>
</mapper>
