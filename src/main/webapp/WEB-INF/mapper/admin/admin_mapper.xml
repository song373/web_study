<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.trip.mapper.AdminMapper">
    <select id="selectAdminById" parameterType="string" resultType="com.app.trip.dto.Admin">
        SELECT * FROM admins WHERE admin_id = #{id}
    </select>
    <update id="updateAdmin" parameterType="com.app.trip.dto.Admin">
        UPDATE admins
        SET admin_pw = #{adminPw},
            fail_count = #{failCount},
            locked_until = #{lockedUntil}
        WHERE admin_id = #{adminId}
    </update>
</mapper>
